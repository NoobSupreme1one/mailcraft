generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id           String   @id @default(cuid())
  title        String
  html         String
  designJson   String?
  thumbnailUrl String?
  category     String?
  // JSON metadata for variables system
  variableSchema Json?
  sampleData     Json?
  isPublished  Boolean  @default(false)
  ownerId      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}